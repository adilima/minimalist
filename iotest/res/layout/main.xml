<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_margin="10dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:id="@+id/root_layout">

    <LinearLayout android:orientation="vertical"
	    android:layout_width="500dp"
	    android:layout_height="match_parent">
	    <TextView android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:text="Type something to be saved to a file"/>
	    <EditText android:id="@+id/textInput"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_weight="0.5"
		    android:gravity="top"/>
	    <LinearLayout android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal"
		    android:layout_gravity="bottom">
		    <Button android:id="@+id/btnWrite"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Write to file"/>
		    <Button android:id="@+id/btnRead"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Read from file"/>
		    <Button android:id="@+id/view_as_html"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="View as HTML"/>
	    </LinearLayout>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:id="@+id/textOutput"
	    android:layout_margin="10dp"
	    android:text="This will be replaced with text from file..."/>
</LinearLayout>
